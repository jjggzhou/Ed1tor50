#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {

            bindings = <
    &kp N7 &kp N8 &kp N9 &trans &trans
    &kp N4 &kp N5 &kp N6 &trans &trans
    &kp N1 &kp N2 &kp N3 &trans &mkp RCLK 
    &kp N0 &trans &kp ENTER &trans &trans 
            >;

        };

        joystick_layer {
            bindings = <
                &tog 0, &mkp MCLK  // 使用&tog 0实现自动切换回default_layer
            >;
        };

        num_layer {
            bindings = <
    &kp N7 &kp N8 &kp N9 &trans &trans
    &kp N4 &kp N5 &kp N6 &trans &trans
    &kp N1 &kp N2 &kp N3 &trans &mkp RCLK 
    &kp N0 &trans &kp ENTER &trans &trans 
            >;
        };

        lower_layer {
            bindings = <
    &bt BT_CLR &none &kp N8 &kp N9 &sys_reset &bootloader
    &kp N4 &kp N5 &kp N6 &trans &trans
    &kp N1 &kp N2 &kp N3 &trans &mkp RCLK 
    &kp N0 &trans &kp ENTER &trans &trans 
            >;
        };
    };
};
